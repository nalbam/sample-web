{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "iconClass": "icon-nginx",
      "tags": "nginx",
      "version": "1.0.0",
      "description": "sample nginx application."
    },
    "name": "sample-web"
  },
  "labels": {
    "template": "sample-web",
    "xpaas": "1.0.0"
  },
  "message": "A new nginx application has been created in your project.",
  "parameters": [
    {
      "name": "APPLICATION_NAME",
      "displayName": "Name",
      "description": "Identifies the resources created for this application.",
      "value": "sample-web",
      "required": true
    },
    {
      "name": "NAMESPACE",
      "displayName": "Namespace",
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "value": "openshift",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "displayName": "Git Repository URL",
      "description": "Git source URI for application",
      "value": "https://github.com/nalbam/sample-web",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "displayName": "Git Reference",
      "description": "Optional branch, tag, or commit.",
      "value": "master",
      "required": false
    },
    {
      "name": "CONTEXT_DIR",
      "displayName": "Context Directory",
      "description": "Path within Git project to build; empty for root project directory.",
      "value": "",
      "required": false
    },
    {
      "name": "GENERIC_WEBHOOK_SECRET",
      "displayName": "Generic Webhook Secret",
      "description": "Generic build trigger secret",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "displayName": "Github Webhook Secret",
      "description": "GitHub trigger secret",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "name": "NGINX_VERSION",
      "displayName": "NGINX Version",
      "description": "Version of NGINX image to be used (1.12 by default).",
      "value": "1.12",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "${NAMESPACE}",
              "name": "nginx:${NGINX_VERSION}"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APPLICATION_NAME}:latest"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-pipeline",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          }
        },
        "strategy": {
          "type": "JenkinsPipeline",
          "jenkinsPipelineStrategy": {
            "jenkinsfilePath": "openshift/templates/Jenkinsfile",
            "env": [
              {
                "name": "APPLICATION_NAME",
                "value": "${APPLICATION_NAME}"
              },
              {
                "name": "SOURCE_REPOSITORY_URL",
                "value": "${SOURCE_REPOSITORY_URL}"
              },
              {
                "name": "SOURCE_REPOSITORY_REF",
                "value": "${SOURCE_REPOSITORY_REF}"
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "Generic",
            "generic": {
              "secret": "${GENERIC_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ]
}
